<Window x:Class="AzerothCoreCreator.ChangelogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="What's New"
        Width="640" Height="520"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="{Binding TitleText}" FontSize="18" FontWeight="SemiBold"/>
            <TextBlock Text="Scroll down to see previous versions." Opacity="0.75" Margin="0,2,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding ChangelogText}"
                       TextWrapping="Wrap"
                       FontFamily="Consolas"
                       FontSize="12"/>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Width="120" Height="28" Content="Close" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
